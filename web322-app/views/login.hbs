<h1 id="login_h1">Log In</h1>
<br/> <br/>
        
        {{#if errorMessage}}
             <div id="loginErrMsg" class="alert alertdanger" style="background-color:rgba(245, 132, 132, 0.3); border-radius:20px;"> <strong>Error:</strong> {{errorMessage}}</div>
        {{/if}}
        
        <form method="post" action="/login">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input class="form-control" id="userName" name="userName" type="text" placeholder="User Name" required value=""
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-success pull-right" value="Login" />
        </form>